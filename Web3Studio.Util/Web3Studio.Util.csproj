<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Nullable>enable</Nullable>
        <Authors>Mustafa Akar</Authors>
        <Description>Common utility for Web3 such as native Hex type, ABI serialization/deserialization, and Json RPC.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>rpc, jsonrpc, hex, crypto, blockchain, abi</PackageTags>
        <Version>1.0.3</Version>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Nethereum.Util" Version="4.21.4"/>
        <PackageReference Include="System.Text.Json" Version="8.0.4"/>
    </ItemGroup>

</Project>
